S3_BUCKET_STAGING=eu-see-dashboard-staging
S3_BUCKET_PROD=eu-see-dashboard-prod
CSV_KEY=raw_data.csv
CHECKPOINT_KEY=last_sync.json

# ---------------- SES Email ----------------
SES_FROM=kyalorichard11@gmail.com  # Verified SES email
SES_TO=kyalorichard11@gmail.com.com # Comma-separated list of recipients

# ---------------- EC2 / Streamlit ----------------
EC2_USER=ec2-user
